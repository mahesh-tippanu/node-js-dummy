<html>
<head>
    <title> To Do App </title>
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h2>A Simple To-Do List App</h2>

        <!-- ADD TASK FORM -->
        <form action="/addtask" method="POST">
            <input type="text" name="newtask" placeholder="Add new task">
            <button>Add Task</button>

            <h2>Added Tasks</h2>

            <% for(var i = 0; i < task.length; i++) { %>
                <li>
                    <input type="checkbox" name="check" value="<%= task[i] %>" />
                    <%= task[i] %>

                    <!-- Delete Button for Pending Tasks -->
                    <form action="/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="item" value="<%= task[i] %>">
                        <button class="delete-btn">üóëÔ∏è</button>
                    </form>
                </li>
            <% } %>

            <button formaction="/removetask" type="submit" id="top" class="button">Remove</button>
        </form>

        <!-- COMPLETED TASKS -->
        <h2>Completed Tasks</h2>

        <% for(var i = 0; i < complete.length; i++) { %>
            <li>
                <input type="checkbox" checked />
                <%= complete[i] %>

                <!-- Delete Button for Completed Tasks -->
                <form action="/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="item" value="<%= complete[i] %>">
                    <button class="delete-btn">üóëÔ∏è</button>
                </form>
            </li>
        <% } %>

    </div>
</body>
</html>
